<% layout('layouts/boilerplate') -%>

<div class="row">
  <div class="col-8 offset-2">
    <br><br>
    <h3>Create New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation">

      <!-- Title -->
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          required
        >
        <div class="valid-feedback">Looks good!</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea
          name="listing[description]"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">please enter descriptions</div>
      </div>

      <!-- Image URL -->
      <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input
          type="text"
          name="listing[image]"
          class="form-control"
        >
      </div>

      <!-- Price + Location -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="1600"
            required
          >
           <div class="invalid-feedback">please enter price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            required
            >
             <div class="invalid-feedback">please enter locations</div>
        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          class="form-control"
          placeholder="Nepal"
          required
        >
         <div class="invalid-feedback">please enter country name</div>
      </div>

      <button class="btn btn-dark add-btn">Add</button>
      <br><br>
    </form>
  </div>
</div>

