<% layout('layouts/boilerplate') -%>
<body>
    <h1>All Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 g-3">
        <% for(let listing of alllistings){ %>
        <div class="col">
            <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
                <div class="card listing-card ">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing/image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b><%= listing.title %></b></p>
                        <p class="card-text">NPR <%= Number(listing.price).toLocaleString('en-IN')%>/night</p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</body>
