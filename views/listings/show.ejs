<% layout('layouts/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-3 mt-3">
       <h3>All Listings</h3>
    </div>

    <div class=" card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-image" alt="listing/image">
         <div class="card-body">
           <p class="card-text">
            <b><%= listing.title %></b><br>
            <%= listing.description %><br>
            NPR <%= listing.price.toLocaleString('en-IN') %><br>
            <%= listing.location %><br>
            <%= listing.country %><br>
        </p>
        </div>
    </div> 
</div>
<div class="btns mb-5">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a><br>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark delete-btn  offset-3">Delete</button>
    </form>
</div>

