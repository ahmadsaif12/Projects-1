<% if(success && success.length > 0){ %>
  <div class="alert alert-success alert-dismissible offset-3" role="alert">
    <%= success[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length > 0){ %>
  <div class="alert alert-danger alert-dismissible offset-3" role="alert">
    <%= error[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
